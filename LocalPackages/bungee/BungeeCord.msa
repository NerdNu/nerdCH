/**
 * Changes the server. Run without arguments to see the valid options.
 * @command
 * @tabcompleter _serverTabcomplete
 */
*:/server $server = >>>
	_changeserver(player(), $server);
<<<

*:/server = >>>
	msg(colorize('&6Usage: &e/server &f<&ename&f>'));
	msg(colorize('&f - Switch to the named server.'));
	_listServers();
<<<

*:'/to-server' [$p] [$s] = >>>
	_assertperm('admin');
	if ($p == '' || $s == '') {
		msg(colorize('&6Usage: &e/to-server &f<&eplayer&f> &f<&eserver&f>'));
		msg(colorize('&f - Send the specified player to the named server.'));
		_listServers();
		die();
	}
	_changeserver($p, $s);
<<<

/**
 * Moves all the players to the specified server.
 * @command
 * @permission nerdch.level.admin
 */
*:'/all-to-server' [$s] = >>>
	_assertperm('admin');
	if ($s == '') {
		msg(colorize('&6Usage: &e/all-to-server &f<&eserver&f>'));
		msg(colorize('&f - Send all players to the named server.'));
		_listServers();
		die();
	}
	foreach(all_players(), @p, g(
		_changeserver(@p, $s)
	));
<<<

/**
 * Moves you to the creative server.
 * @command
 */
*:/creative = _changeserver(player(), 'creative');
/**
 * Moves you to the event server.
 * @command
 */
*:/event    = _changeserver(player(), 'event');
/**
 * Moves you to the lobby.
 * @command
 */
*:/lobby    = _changeserver(player(), 'lobby');
/**
 * Moves you to the pve server.
 * @command
 */
*:/pve      = _changeserver(player(), 'pve');
/**
 * Moves you to the skyblock server.
 * @command
 */
*:/skyblock = _changeserver(player(), 'skyblock');

