/mobtower $mob [$height=5] = >>>
	_assertperm('admin')
	assign(@lastRider, null)
	foreach(range($height), @i,
		assign(@lastSpawned, spawn_mob($mob, 1, pcursor())[0])
		if(@lastRider != null){
			set_entity_rider(@lastRider, @lastSpawned)
		}
		assign(@lastRider, @lastSpawned)
	)
<<<

