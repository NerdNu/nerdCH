*:/signtext [$line] [$] = >>>
	_assertperm('admin')
	if($line == ''){
		msg(color(red).'Usage: /signtext $line $text')
		msg('Supported color codes:')
		msg(colorize('&0&&0'))
		msg(colorize('&1&&1'))
		msg(colorize('&2&&2'))
		msg(colorize('&3&&3'))
		msg(colorize('&4&&4'))
		msg(colorize('&5&&5'))
		msg(colorize('&6&&6'))
		msg(colorize('&7&&7'))
		msg(colorize('&8&&8'))
		msg(colorize('&9&&9'))
		msg(colorize('&a&&a'))
		msg(colorize('&b&&b'))
		msg(colorize('&c&&c'))
		msg(colorize('&d&&d'))
		msg(colorize('&e&&e'))
		msg(colorize('&f&&f'))
		msg('Typing && twice gives a single, literal &')
		die()
	}
	if($line < 1 || $line > 4){
		die(color(red).'The line number must be between 1 and 4!')
	}
	if(is_sign_at(pcursor())){
		@array = get_sign_text(pcursor())
		@array[$line - 1] = colorize($)
		set_sign_text(pcursor(), @array)
	} else {
		die('You aren\'t looking at a sign!')
	}

<<<


