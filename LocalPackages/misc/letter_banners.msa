		'7': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:dls,Color:0},{Pattern:ts,Color:0},{Pattern:bo,Color:16}]}} 1',
		'8': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ts,Color:0},{Pattern:ls,Color:0},{Pattern:ms,Color:0},{Pattern:bs,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'9': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:hhb,Color:16},{Pattern:ms,Color:0},{Pattern:ts,Color:0},{Pattern:rs,Color:0},{Pattern:bs,Color:0},{Pattern:bo,Color:16}]}} 1'
	);

	@template = @array[@letter];
	@template = replace(@template, 'black_banner', @backgroundColor.'_banner');
	@template = replace(@template, 'template_banner', @foregroundColor.'_banner');
	@template = replace(@template, 'Color:0', 'Color:'.@colorToNumber[@foregroundColor]);
	@template = replace(@template, 'Color:16', 'Color:'.@colorToNumber[@backgroundColor]);
	sudo(@template);
<<<