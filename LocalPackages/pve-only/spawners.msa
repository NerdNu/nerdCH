#
# Creates a blaze spawner with boosted player range.
#
nerdch.level.admin:/quadblaze = >>>
    run('/setblock ~ ~-1 ~ minecraft:spawner{SpawnData:{id:"minecraft:blaze"},RequiredPlayerRange:38,MaxNearbyEntities:15} replace');
<<<

#
# Creates an iron golem spawner.
#
nerdch.level.admin:/defaultgolemspawner = >>>
    run('/setblock ~ ~-1 ~ minecraft:spawner{SpawnData:{id:iron_golem},SpawnCount:3,SpawnRange:4,RequiredPlayerRange:25,Delay:20,MinSpawnDelay:9600,MaxSpawnDelay:9600,MaxNearbyEntities:25} replace');
<<<

#
# Creates an iron golem spawner with the specified tier.
#
nerdch.level.admin:/golemspawner [$tier] = >>>
    @t = integer($tier);
    if (!is_integer(@t)) {
        msg(color(RED)."The tier must be a positive integer.");
        die();
    }
    if (@t < 0) {
        msg(color(RED)."The tier must be a positive integer.");
        die();
    } else if (@t > 20) {
        msg(color(RED)."Let's not get crazy...");
        die();
    }
    run('/setblock ~ ~-1 ~ minecraft:spawner{SpawnCount:'.@t.',SpawnRange:4,Delay:20,MinSpawnDelay:9600,MaxSpawnDelay:9600,MaxNearbyEntities:25,RequiredPlayerRange:25,SpawnData:{id:"minecraft:iron_golem",CustomNameVisible:1b,PlayerCreated:0b,CustomName:"{\\"text\\":\\"Tier '.@t.'\\"}"}} replace');
<<<
