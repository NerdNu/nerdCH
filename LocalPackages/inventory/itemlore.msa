*:/itemlore [$] = >>>
    _assertperm('admin');
    @held = pinv(player(), null);
    @meta = get_itemmeta(null);
    if($ == '') {
        msg(color('RED').'Usage: /itemlore line1|line2|line3|etc');
        die();
    }
    if (is_null(@held)) {
        msg(color('RED').'You need to be holding something to add lore.');
        die();
    }
    if (is_null(@meta)) {
        @meta = array();
    }
    @lines = split('|', colorize($));
    @meta['lore'] = @lines;
    set_itemmeta(null, @meta);
<<<
