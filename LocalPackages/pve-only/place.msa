nerdch.level.admin:/addplace $place [$set] = >>>
	@setname=$set
	if(@setname==''){
		@setname='Other'
	}
	# Make some of the known world names friendlier 
	switch(pworld()){
		case 'world':
			@world='Overworld'
			break();
		case 'world_nether':
			@world='Nether'
			break();
		case 'world_the_end':
			@world='End'
			break();
		case 'mapworld':
			@world='Mapworld';
			break();
		default:
			@world=pworld();
			break()
	}
	@placedb = get_value('placedb')
	if(@placedb==null){
		@placedb=array()
	}
	@placedb[@world][@setname][$place]=ploc()
	store_value('placedb', @placedb)
	msg(color(LIGHT_PURPLE).$place . ' added.')
