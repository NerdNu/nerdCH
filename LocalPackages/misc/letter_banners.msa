		'2': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ts,Color:0},{Pattern:mr,Color:16},{Pattern:bs,Color:0},{Pattern:dls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'3': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:bs,Color:0},{Pattern:ms,Color:0},{Pattern:ts,Color:0},{Pattern:cbo,Color:16},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'4': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:hhb,Color:16},{Pattern:rs,Color:0},{Pattern:ms,Color:0},{Pattern:bo,Color:16}]}} 1',
