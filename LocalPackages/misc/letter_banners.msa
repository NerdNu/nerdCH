		'e': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:ts,Color:0},{Pattern:ms,Color:0},{Pattern:bs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'f': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ms,Color:0},{Pattern:rs,Color:16},{Pattern:ts,Color:0},{Pattern:ls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'g': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:rs,Color:0},{Pattern:hh,Color:16},{Pattern:bs,Color:0},{Pattern:ls,Color:0},{Pattern:ts,Color:0},{Pattern:bo,Color:16}]}} 1',
		'h': '/give @p minecraft:template_banner{BlockEntityTag:{Patterns:[{Pattern:ts,Color:16},{Pattern:bs,Color:16},{Pattern:ls,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'i': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:cs,Color:0},{Pattern:ts,Color:0},{Pattern:bs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'j': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:hh,Color:16},{Pattern:bs,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'k': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:drs,Color:0},{Pattern:hh,Color:16},{Pattern:dls,Color:0},{Pattern:ls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'l': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:bs,Color:0},{Pattern:ls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'm': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:tt,Color:0},{Pattern:tts,Color:16},{Pattern:ls,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'n': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:tt,Color:16},{Pattern:drs,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'o': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ls,Color:0},{Pattern:rs,Color:0},{Pattern:bs,Color:0},{Pattern:ts,Color:0},{Pattern:bo,Color:16}]}} 1',
		'p': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:rs,Color:0},{Pattern:hhb,Color:16},{Pattern:ms,Color:0},{Pattern:ts,Color:0},{Pattern:ls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'q': '/give @p minecraft:template_banner{BlockEntityTag:{Patterns:[{Pattern:mr,Color:16},{Pattern:rs,Color:0},{Pattern:ls,Color:0},{Pattern:br,Color:0},{Pattern:bo,Color:16}]}} 1',
		'r': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:hh,Color:0},{Pattern:cs,Color:16},{Pattern:ts,Color:0},{Pattern:ls,Color:0},{Pattern:drs,Color:0},{Pattern:bo,Color:16}]}} 1',
		's': '/give @p minecraft:template_banner{BlockEntityTag:{Patterns:[{Pattern:mr,Color:16},{Pattern:ms,Color:16},{Pattern:drs,Color:0},{Pattern:bo,Color:16}]}} 1',
		't': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ts,Color:0},{Pattern:cs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'u': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:bs,Color:0},{Pattern:ls,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'v': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:dls,Color:0},{Pattern:ls,Color:0},{Pattern:bt,Color:16},{Pattern:dls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'w': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:bt,Color:0},{Pattern:bts,Color:16},{Pattern:ls,Color:0},{Pattern:rs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'x': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:cr,Color:0},{Pattern:bo,Color:16}]}} 1',
		'y': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:drs,Color:0},{Pattern:hhb,Color:16},{Pattern:dls,Color:0},{Pattern:bo,Color:16}]}} 1',
		'z': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:ts,Color:0},{Pattern:dls,Color:0},{Pattern:bs,Color:0},{Pattern:bo,Color:16}]}} 1',
		'0': '/give @p minecraft:black_banner{BlockEntityTag:{Patterns:[{Pattern:bs,Color:0},{Pattern:ls,Color:0},{Pattern:ts,Color:0},{Pattern:rs,Color:0},{Pattern:dls,Color:0},{Pattern:bo,Color:16}]}} 1',
